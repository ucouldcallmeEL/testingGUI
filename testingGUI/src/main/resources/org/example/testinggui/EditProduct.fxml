<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" fillWidth="false" prefHeight="504.0" prefWidth="344.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.EditProductController">
   <children>
      <HBox prefHeight="56.0" prefWidth="359.0">
         <children>
            <Button fx:id="homeButton" mnemonicParsing="false" onAction="#handleHomeButton" prefHeight="26.0" prefWidth="50.0" text="Home">
               <HBox.margin>
                  <Insets left="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="26.0" prefWidth="220.0" text="E-commerce" textAlignment="CENTER">
               <font>
                  <Font name="Bangla MN Bold" size="13.0" />
               </font>
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <Label text="Edit  Product">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="ProductNameField" prefWidth="200.0" promptText="Product Name" />
      <TextField fx:id="ProductPriceField" prefWidth="200.0" promptText="Product Price" />
      <TextField fx:id="ImageURLField" prefWidth="200.0" promptText="Image URLs" />
      <TextField fx:id="ProductStockField" prefWidth="200.0" promptText="Available Stock" />
      <TextField fx:id="ProductCategoryField" prefWidth="200.0" promptText="Product Category" />
      <TextArea fx:id="ProductDescriptionField" prefHeight="200.0" prefWidth="200.0" promptText="Product Description" />
      <Label fx:id="ProductUpdateError" textFill="#b40000" />
      <Button fx:id="UpdateButton" mnemonicParsing="false" onAction="#handleUpdateButton" text="Update" />
      <Button fx:id="DeleteProductButton" mnemonicParsing="false" onAction="#handleDeleteProductButton" text="Delete Product" />
   </children>
</VBox>
