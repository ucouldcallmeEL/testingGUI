<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" prefHeight="205.0" prefWidth="353.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.CheckoutProductCardController">
   <children>
      <ImageView fx:id="ProductImage" fitHeight="182.0" fitWidth="220.0" pickOnBounds="true" preserveRatio="true" />
      <VBox alignment="CENTER" prefHeight="206.0" prefWidth="126.0">
         <children>
            <Hyperlink fx:id="ProductNameHyperlink" onAction="#handleProductNameHyperlink" text="Product Name" />
            <HBox alignment="CENTER" prefHeight="28.0" prefWidth="111.0">
               <children>
                  <Label prefHeight="28.0" prefWidth="34.0" text="Price: " />
                  <Label fx:id="ProductPriceLabel" prefHeight="28.0" prefWidth="32.0" text="Price" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="26.0" prefWidth="111.0">
               <children>
                  <Label alignment="CENTER" text="Quantity: " />
                  <Label fx:id="ProductQuantityLabel" alignment="CENTER" text="Quantity" />
               </children>
            </HBox>
            <Button fx:id="removeFromCartButton" mnemonicParsing="false" onAction="#handleRemoveFromCartButton" prefHeight="29.0" prefWidth="68.0" text="Remove" textAlignment="CENTER" wrapText="true">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="moveToWishlistButton" mnemonicParsing="false" onAction="#handleMoveToWishlistButton" prefHeight="26.0" prefWidth="117.0" text="Move To Wishllist" textAlignment="CENTER" wrapText="true">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</HBox>
